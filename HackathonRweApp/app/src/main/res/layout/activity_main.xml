<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.inces.hackathonrweapp.MainActivity">

    <ScrollView
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/layoutGeneral"
                android:background="@android:color/holo_blue_dark"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgBatteryChargeState"
                    android:background="@android:color/white"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/txtBatteryPercentage"
                    android:textColor="@android:color/white"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="55sp" />

            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:background="@android:color/holo_orange_light"
                android:id="@+id/chartHistory"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:clickable="false"
                    android:background="@android:color/white"
                    android:id="@+id/containerEnergyMix"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </RelativeLayout>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>
